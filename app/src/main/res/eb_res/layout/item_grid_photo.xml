<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.samsung.android.plugin.tv.v3.edgeBlending.ui.selectPhoto.model.PhotoModel.Data" />

        <variable
            name="viewModel"
            type="com.samsung.android.plugin.tv.v3.edgeBlending.ui.selectPhoto.SelectPhotoViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/selectedLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/outline_photo_select_normal"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingStart="6dp" >

            <FrameLayout
                android:layout_width="22dp"
                android:layout_height="22dp">

                <ImageView
                    android:id="@+id/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/selectNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_background"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                     />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>