<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="item"
            type="com.samsung.android.plugin.tv.v3.edgeBlending.ui.configuration.searchdevice.EBDeviceModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dimen_16dp_h"
    android:paddingRight="@dimen/dimen_16dp_h"
    android:paddingTop="@dimen/dimen_16dp_h"
    >

    <RadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="@{item.selected}"
        android:buttonTint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Freestyle B"
        android:text="@{item.model.name}"
        android:clickable="false"
        android:textSize="@dimen/dimen_17dp_h"
        android:paddingLeft="@dimen/dimen_18dp_w"
        />
     <View
         android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp_h"
        android:background="#FF999999"
        app:layout_constraintTop_toBottomOf="@id/radio"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/dimen_58dp_w"
        android:layout_marginTop="@dimen/dimen_16dp_h"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>